<!DOCTYPE html>

<style>
    .form-signin {
        width: 100%;
        max-width: 330px;
        padding: 15px;
        margin: auto;
    }

    html, body {
        height: 100%;
    }

    body {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }
</style>
<html>


<head>
    <meta name="viewport" content="width=device-width" />
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/dx.light.css">
    <script type="text/javascript" src="/js/dx.all.js"></script>
    <link rel="stylesheet" href="/css/main.css">
    <script src="/js/pnotify.js"></script>
    <link rel="stylesheet" href="/css/pnotify.css">
    <script type="text/javascript">
        DevExpress.localization.locale("pt");
    </script>
    <script src="/js/localization/dx.messages.pt.js"></script>
    <title>@ViewBag.Title</title>
</head>


<body class="text-center">
    <form class="form-signin">
        <img class="mb-5" src="/img/NewsFlashLogin.jpg" alt="" width="187">
        <h1 class="h3 mb-5 font-weight-normal">Faça o login para continuar</h1>
        <label for="inputEmail" class="sr-only">Endereço de email</label>
        <input type="email" id="inputEmail" class="form-control mb-2" placeholder="Seu email" required autofocus>
        <label for="inputPassword" class="sr-only">Senha</label>
        <input type="password" id="inputPassword" class="form-control mb-5" placeholder="Senha" required>
        <button class="btn btn-lg btn-primary btn-block mb-2" id="entrar" type="button">Login</button>
        <button class="btn btn-lg btn-primary" id="inscrever" type="button">Cadastro</button>
        <br>
        <div id="goNoticias" class="mt-4"></div>
    </form>

</body>

</html>

<script src="/js/login.js"></script>
